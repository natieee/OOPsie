@page "/customerorder"
@layout Admin.Components.Layout.MainLayout

<div class="page-container">
    <h2 class="page-title">ðŸ“¦ Place Orders</h2>

    <table class="order-table">
        <thead>
            <tr>
                <th>Order ID</th>
                <th>Customer</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in orders)
            {
                <tr>
                    <td>@order.Id</td>
                    <td>@order.Customer</td>
                    <td>
                        <select @bind="order.Status" class="status-select">
                            <option>Pending</option>
                            <option>Picked Up</option>
                            <option>Delivered</option>
                        </select>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@code {
    private List<OrderModel> orders = new()
    {
        new() { Id = "ORD-001", Customer = "Anna Cruz", Status = "Pending" },
        new() { Id = "ORD-002", Customer = "Marco Diaz", Status = "Picked Up" },
        new() { Id = "ORD-003", Customer = "Jessa Flores", Status = "Delivered" },
    };

    public class OrderModel
    {
        public string Id { get; set; } = "";
        public string Customer { get; set; } = "";
        public string Status { get; set; } = "";
    }
}

