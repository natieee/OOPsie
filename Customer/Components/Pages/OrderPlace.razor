@page "/place-order"
@layout Customer.Components.Layout.MainLayout

<div class="placeorder-container">
    <h2 class="page-title">ðŸ§´ Place Your Order</h2>

    
    
        <div class="order-form">
            <!-- Have Gallon -->
            <div class="form-group">
                <label>Do you have a gallon?</label>
                <div class="radio-group">
                    <label>
                        <input type="radio" name="hasGallon" value="yes" @onchange="() => hasGallon = true" checked="@hasGallon" /> Yes
                    </label>
                    <label>
                        <input type="radio" name="hasGallon" value="no" @onchange="() => hasGallon = false" checked="@(!hasGallon)" /> No
                    </label>
                </div>
            </div>

            <!-- Purchase Gallon -->
            <div class="form-group">
                <label>Do you want to purchase a gallon?</label>
                <div class="radio-group">
                    <label>
                        <input type="radio" name="purchaseGallon" value="yes" @onchange="() => purchaseGallon = true" checked="@purchaseGallon" /> Yes
                    </label>
                    <label>
                        <input type="radio" name="purchaseGallon" value="no" @onchange="() => purchaseGallon = false" checked="@(!purchaseGallon)" /> No
                    </label>
                </div>
            </div>

            
                <!-- Purchase Gallon Quantity and Type -->
                <div class="form-group">
                    <label>Quantity of Gallons to Purchase</label>
                    <input class="input-field" type="number" min="1" @bind="purchaseQuantity" @bind:event="oninput" />
                </div>

                <div class="form-group">
                    <label>Type of Gallon to Purchase</label>
                    <select class="dropdown" @bind="purchaseType" @bind:event="onchange">
                        <option value="">Select type</option>
                        <option value="slim">Slim Gallon - â‚±200</option>
                        <option value="round">Round Gallon - â‚±250</option>
                    </select>
                </div>

                <div class="form-group">
                    <span class="total-price">Purchase Total: â‚±@purchaseTotal</span>
                </div>
            

            <!-- Customer Name -->
            <div class="form-group">
                <label>Customer Name (Name on Gallon)</label>
                <input class="input-field" type="text" @bind="customerName" />
            </div>

            <!-- Refill Type -->
            <div class="form-group">
                <label>Refill Gallon Type</label>
                <select class="dropdown" @bind="refillType" @bind:event="onchange">
                    <option value="">Select type</option>
                    <option value="slim">Slim - â‚±25</option>
                    <option value="round">Round - â‚±30</option>
                </select>
            </div>

            <!-- Refill Quantity -->
            <div class="form-group">
                <label>Refill Quantity</label>
                <input class="input-field" type="number" min="1" @bind="refillQuantity" @bind:event="oninput" />
            </div>

            <div class="form-group">
                <span class="total-price">Refill Total: â‚±@refillTotal</span>
            </div>

            <!-- Payment Method -->
            <div class="form-group">
                <label>Payment Method</label>
                <select class="dropdown" @bind="paymentMethod">
                    <option value="">Select method</option>
                    <option value="cash">Cash</option>
                    <option value="ewallet">Ewallet</option>
                </select>
            </div>

            <button class="submit-btn" @onclick="PlaceOrder">Place Order</button>
        </div>
    
        <div class="confirmation-message">
            <p>âœ… <strong>Order placed successfully!</strong></p>
            <p>Please wait <strong>10â€“15 minutes</strong> for the gallon pickup at your provided address.</p>
            <p>Check the <strong>Order History</strong> page for your order status.</p>
        </div>
    
</div>

@code {
    private bool hasGallon = true;
    private bool purchaseGallon = false;
    private int purchaseQuantity;
    private string? purchaseType;
    private string? customerName;
    private string? refillType;
    private int refillQuantity;
    private string? paymentMethod;
    private bool orderPlaced = false;

    private int purchaseTotal => (purchaseType switch
    {
        "slim" => 200,
        "round" => 250,
        _ => 0
    }) * purchaseQuantity;

    private int refillTotal => (refillType switch
    {
        "slim" => 25,
        "round" => 30,
        _ => 0
    }) * refillQuantity;

    private void PlaceOrder()
    {
        if (string.IsNullOrWhiteSpace(customerName) || string.IsNullOrWhiteSpace(paymentMethod))
            return;

        orderPlaced = true;
    }
}

