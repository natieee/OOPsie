@page "/place-order"
@layout Customer.Components.Layout.MainLayout

<div class="placeorder-container">
    <h2 class="page-title">üß¥ Place Your Order</h2>

    @if (!orderPlaced)
    {
        <div class="order-form">
            <!-- Have Gallon -->
            <div class="form-group">
                <label>Do you have a gallon?</label>
                <div class="radio-group">
                    <label>
                        <input type="radio" name="hasGallon" value="true" @bind="hasGallon" /> Yes
                    </label>
                    <label>
                        <input type="radio" name="hasGallon" value="false" @bind="hasGallon" /> No
                    </label>
                </div>
            </div>

            @if (!hasGallon)
            {
                <!-- Purchase Gallon -->
                <div class="form-group">
                    <label>Do you want to purchase a gallon?</label>
                    <div class="radio-group">
                        <label>
                            <input type="radio" name="purchaseGallon" value="true" @bind="purchaseGallon" /> Yes
                        </label>
                        <label>
                            <input type="radio" name="purchaseGallon" value="false" @bind="purchaseGallon" /> No
                        </label>
                    </div>
                </div>

                @if (purchaseGallon)
                {
                    <!-- Purchase Gallon Quantity and Type -->
                    <div class="form-group">
                        <label>Quantity of Gallons to Purchase</label>
                        <input class="input-field" type="number" min="1" @bind="purchaseQuantity" @bind:event="oninput" />
                    </div>

                    <div class="form-group">
                        <label>Type of Gallon to Purchase</label>
                        <select class="dropdown" @bind="purchaseType">
                            <option value="">Select type</option>
                            <option value="slim">Slim Gallon - ‚Ç±200</option>
                            <option value="round">Round Gallon - ‚Ç±250</option>
                        </select>
                    </div>

                    <div class="form-group">
                        <span class="total-price">Purchase Total: ‚Ç±@purchaseTotal</span>
                    </div>
                }
            }

            <!-- Customer Name -->
            <div class="form-group">
                <label>Customer Name (Name on Gallon)</label>
                <input class="input-field" type="text" @bind="customerName" />
            </div>

            <!-- Address -->
            <div class="form-group">
                <label>Delivery / Pickup Address</label>
                <textarea class="input-field address-field" rows="3" placeholder="Enter your full address here..." @bind="address"></textarea>
            </div>

            <!-- Refill Type -->
            <div class="form-group">
                <label>Refill Gallon Type</label>
                <select class="dropdown" @bind="refillType">
                    <option value="">Select type</option>
                    <option value="slim">Slim - ‚Ç±25</option>
                    <option value="round">Round - ‚Ç±30</option>
                </select>
            </div>

            <!-- Refill Quantity -->
            <div class="form-group">
                <label>Refill Quantity</label>
                <input class="input-field" type="number" min="1" @bind="refillQuantity" @bind:event="oninput" />
            </div>

            <div class="form-group">
                <span class="total-price">Refill Total: ‚Ç±@refillTotal</span>
            </div>

            <!-- Payment Method -->
            <div class="form-group">
                <label>Payment Method</label>
                <select class="dropdown" @bind="paymentMethod">
                    <option value="">Select method</option>
                    <option value="cash">Cash</option>
                    <option value="ewallet">E-wallet</option>
                </select>
            </div>

            @if (showValidationMessage)
            {
                <p style="color:red; font-weight:600;">‚ö†Ô∏è Please fill in all required fields before placing your order.</p>
            }

            <button class="submit-btn" @onclick="PlaceOrder">Place Order</button>
        </div>
    }
    else
    {
        <div class="confirmation-message">
            <p>‚úÖ <strong>Order placed successfully!</strong></p>
            <p>Please wait <strong>10‚Äì15 minutes</strong> for the gallon pickup at your provided address.</p>
            <p>Check the <strong>Order History</strong> page for your order status.</p>
        </div>
    }
</div>

@code {
    private bool hasGallon = true;
    private bool purchaseGallon = false;
    private int purchaseQuantity;
    private string? purchaseType;
    private string? customerName;
    private string? refillType;
    private int refillQuantity;
    private string? paymentMethod;
    private string? address;
    private bool orderPlaced = false;
    private bool showValidationMessage = false;

    private int purchaseTotal => (purchaseType switch
    {
        "slim" => 200,
        "round" => 250,
        _ => 0
    }) * purchaseQuantity;

    private int refillTotal => (refillType switch
    {
        "slim" => 25,
        "round" => 30,
        _ => 0
    }) * refillQuantity;

    private void PlaceOrder()
    {
        showValidationMessage = false;

        if (string.IsNullOrWhiteSpace(customerName) ||
            string.IsNullOrWhiteSpace(paymentMethod) ||
            string.IsNullOrWhiteSpace(address))
        {
            showValidationMessage = true;
            return;
        }

        orderPlaced = true;
    }
}

