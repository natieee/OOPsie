@page "/signup"
@inject NavigationManager Navigation
@rendermode InteractiveServer
@using main.Data
@using main.Data.Entities
@using Microsoft.AspNetCore.Identity
@using Microsoft.EntityFrameworkCore
@using Microsoft.AspNetCore.Components.Web

<style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    body {
        background: url('https://learnandsupport.getolympus.com/sites/default/files/styles/hero_large/public/2020-10/amico_-_water_droplets_1.jpg?itok=kJ972xkJ') no-repeat center center fixed;
        background-size: cover;
        min-height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 20px;
    }

    .signup-container {
        display: flex;
        max-width: 1100px;
        width: 100%;
        min-height: 650px;
        box-shadow: 0 20px 40px rgba(0, 0, 0, 0.25);
        border-radius: 20px;
        overflow: hidden;
    }

    .brand-section {
        flex: 1;
        background: linear-gradient(135deg, rgba(6, 57, 112, 0.92), rgba(4, 33, 74, 0.92));
        color: white;
        padding: 50px 35px;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        position: relative;
        overflow: hidden;
    }

    .brand-section::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: url('https://learnandsupport.getolympus.com/sites/default/files/styles/hero_large/public/2020-10/amico_-_water_droplets_1.jpg?itok=kJ972xkJ') no-repeat center center;
        background-size: cover;
        opacity: 0.18;
        z-index: 0;
    }

    .brand-content {
        position: relative;
        z-index: 1;
        text-align: center;
        width: 100%;
    }

    .brand-logo {
        margin-bottom: 30px;
        padding: 12px 20px;
        display: flex;
        align-items: center;
        justify-content: center;
        overflow: hidden;
        border-radius: 24px;
    }

    .brand-logo img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        display: block;
        border-radius: inherit;
    }

    .brand-title {
        font-size: 32px;
        font-weight: 800;
        line-height: 1.2;
        margin-bottom: 15px;
        letter-spacing: 0.3px;
    }

    .brand-subtitle {
        font-size: 18px;
        opacity: 0.95;
        margin-top: 20px;
        font-weight: 600;
        letter-spacing: 0.8px;
        color: #a8d8ff;
    }

    .form-section {
        flex: 1.2;
        background: rgba(255, 255, 255, 0.97);
        backdrop-filter: blur(15px);
        padding: 40px 35px;
        display: flex;
        flex-direction: column;
    }

    .form-header {
        margin-bottom: 25px;
        text-align: center;
    }

    .form-title {
        font-size: 26px;
        font-weight: 700;
        color: #04214a;
        margin-bottom: 6px;
    }

    .form-subtitle {
        color: #666;
        font-size: 14px;
        font-weight: 500;
    }

    .form-content {
        flex: 1;
        display: flex;
        flex-direction: column;
        gap: 8px;
    }

    .form-row {
        display: flex;
        gap: 15px;
        margin-bottom: 12px;
    }

    .form-group {
        flex: 1;
        margin-bottom: 0;
    }

    .form-label {
        display: block;
        margin-bottom: 6px;
        font-weight: 600;
        color: #333;
        font-size: 13px;
        letter-spacing: 0.2px;
    }

    .form-input, .form-textarea {
        width: 100%;
        padding: 12px 15px;
        border: 2px solid #e1e5e9;
        border-radius: 8px;
        font-size: 14px;
        transition: all 0.3s ease;
        background: rgba(255, 255, 255, 0.9);
    }

    .form-input:focus, .form-textarea:focus {
        outline: none;
        border-color: #063970;
        box-shadow: 0 0 0 2px rgba(6, 57, 112, 0.1);
        background: white;
    }

    .form-textarea {
        min-height: 70px;
        resize: vertical;
        line-height: 1.4;
        font-size: 14px;
    }

    .full-width {
        width: 100%;
    }

    .checkbox-group {
        display: flex;
        align-items: center;
        gap: 10px;
        margin: 20px 0;
        padding: 12px;
        background: rgba(6, 57, 112, 0.04);
        border-radius: 8px;
        border-left: 3px solid #063970;
    }

    .checkbox-group input[type="checkbox"] {
        width: 16px;
        height: 16px;
        accent-color: #063970;
        flex-shrink: 0;
    }

    .checkbox-group label {
        font-size: 13px;
        color: #555;
        margin: 0;
        line-height: 1.4;
    }

    .terms-link {
        color: #063970;
        text-decoration: none;
        font-weight: 600;
        transition: color 0.3s;
        font-size: 13px;
    }

    .terms-link:hover {
        color: #04214a;
        text-decoration: underline;
    }

    .form-actions {
        margin-top: auto;
        padding-top: 20px;
    }

    .signup-btn {
        width: 100%;
        padding: 14px;
        background: linear-gradient(135deg, #063970, #04214a);
        color: white;
        border: none;
        border-radius: 8px;
        font-size: 15px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
        box-shadow: 0 4px 12px rgba(6, 57, 112, 0.25);
        letter-spacing: 0.3px;
    }

    .signup-btn:hover {
        background: linear-gradient(135deg, #04214a, #031a38);
        transform: translateY(-1px);
        box-shadow: 0 6px 16px rgba(6, 57, 112, 0.35);
    }

    .signup-btn:active {
        transform: translateY(0);
    }

    .switch-link {
        text-align: center;
        font-size: 14px;
        padding-top: 15px;
        margin-top: 15px;
        border-top: 1px solid #e1e5e9;
    }

    .switch-link a {
        color: #063970;
        text-decoration: none;
        font-weight: 600;
        transition: color 0.3s;
    }

    .switch-link a:hover {
        color: #04214a;
        text-decoration: underline;
    }

    .water-drop {
        position: absolute;
        background: rgba(255, 255, 255, 0.1);
        border-radius: 50%;
        animation: float 6s ease-in-out infinite;
    }

    .water-drop-1 {
        width: 60px;
        height: 60px;
        top: 15%;
        left: 10%;
        animation-delay: 0s;
    }

    .water-drop-2 {
        width: 45px;
        height: 45px;
        top: 65%;
        right: 15%;
        animation-delay: 2s;
    }

    .water-drop-3 {
        width: 35px;
        height: 35px;
        bottom: 25%;
        left: 20%;
        animation-delay: 4s;
    }

    @@keyframes float {
        0%, 100% {
            transform: translateY(0) scale(1);
            opacity: 0.3;
        }
        50% {
            transform: translateY(-15px) scale(1.05);
            opacity: 0.5;
        }
    }

    @@media (max-width: 1024px) {
        .signup-container {
            max-width: 95%;
            min-height: 600px;
        }
        
        .brand-section {
            padding: 40px 25px;
        }
        
        .form-section {
            padding: 35px 25px;
        }
    }

    @@media (max-width: 768px) {
        body {
            padding: 15px;
        }

        .signup-container {
            flex-direction: column;
            min-height: auto;
            max-width: 500px;
        }
        
        .brand-section {
            padding: 30px 20px;
            min-height: 200px;
        }
        
        .form-section {
            padding: 30px 25px;
        }

        .form-row {
            flex-direction: column;
            gap: 12px;
        }

        .brand-logo {
            font-size: 20px;
            margin-bottom: 20px;
            padding: 10px 15px;
        }

        .brand-title {
            font-size: 24px;
        }

        .brand-subtitle {
            font-size: 16px;
        }

        .form-title {
            font-size: 22px;
        }
    }

    @@media (max-width: 480px) {
        body {
            padding: 10px;
        }

        .brand-section {
            padding: 25px 15px;
        }
        
        .form-section {
            padding: 25px 20px;
        }

        .brand-title {
            font-size: 20px;
        }

        .form-title {
            font-size: 20px;
        }

        .form-input, .form-textarea {
            padding: 10px 12px;
            font-size: 13px;
        }
    }
</style>

<div class="signup-container">
    <!-- Left Brand Section -->
    <div class="brand-section">
        <div class="water-drop water-drop-1"></div>
        <div class="water-drop water-drop-2"></div>
        <div class="water-drop water-drop-3"></div>
        <div class="brand-content">
            <div class="brand-logo">
                <img src=https://i.postimg.cc/tJjFPpFj/566713130-2648065195543491-8938382609362833392-n.png alt="Water Station Online Appointment Logo" width="240" height="240" />
            </div>
            <div class="brand-title">
                Water Station<br />
                Online Appointment
            </div>
            <div class="brand-subtitle">DRINK YOUR WATER BITCH!</div>
        </div>
    </div>

    <!-- Right Form Section -->
    <div class="form-section">
        <div class="form-header">
            <h2 class="form-title">Sign up</h2>
            <div class="form-subtitle">Create your account</div>
        </div>

        <div class="form-content">
        
            <!-- Row 1: Fullname -->
            <div class="form-group full-width">
                <label class="form-label">Full Name</label>
                <input class="form-input" type="text" @bind="FullName" placeholder="Enter your Full Name" />
            </div>

            <!-- Row 2: Username and Email -->
            <div class="form-row">
                <div class="form-group">
                    <label class="form-label">Username</label>
                    <input class="form-input" type="text" @bind="Username" placeholder="Choose username" />
                </div>
                <div class="form-group">
                    <label class="form-label">Email</label>
                    <input class="form-input" type="email" @bind="Email" placeholder="Enter email" />
                </div>
            </div>

            <!-- Row 3: Contact and Address -->
            <div class="form-row">
                <div class="form-group">
                    <label class="form-label">Contact number</label>
                    <input class="form-input" type="tel" @bind="ContactNumber" placeholder="Phone number" />
                </div>
            </div>

            <div class="form-group full-width">
                <label class="form-label">Address</label>
                <textarea class="form-textarea" @bind="Address" placeholder="House no. / Street name / Brgy name / City"></textarea>
            </div>

            <!-- Row 4: Password and Confirm Password -->
            <div class="form-row">
                <div class="form-group">
                    <label class="form-label">Password</label>
                    <input class="form-input" type="password" @bind="Password" placeholder="Create password" />
                </div>
                <div class="form-group">
                    <label class="form-label">Confirm password</label>
                    <input class="form-input" type="password" @bind="ConfirmPassword" placeholder="Confirm password" />
                </div>
            </div>

            <div class="checkbox-group">
                <input type="checkbox" id="terms" @bind="AgreeTerms" />
                <label for="terms">
                    I agree to the <a href="#" class="terms-link" @onclick="ShowTerms" @onclick:preventDefault>Terms and Conditions</a>
                </label>
            </div>

            <div class="form-actions">
                @if (!string.IsNullOrEmpty(errorMessage))
                {
                    <div class="alert alert-danger" role="alert">
                        @errorMessage
                    </div>
                }
                <button type="button" class="signup-btn" @onclick="HandleSignup">Create account</button>

                <div class="switch-link">
                    Already have an account? <a href="/login">Log in</a>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    // Injected Services
    [Inject] private AppDbContext _context { get; set; } = default!;
    [Inject] private IPasswordHasher<User> _passwordHasher { get; set; } = default!;
    [Inject] private NavigationManager _navigationManager { get; set; } = default!;

    // Form fields
    private string FullName { get; set; } = "";
    private string Username { get; set; } = "";
    private string Email { get; set; } = "";
    private string ContactNumber { get; set; } = "";
    private string Address { get; set; } = "";
    private string Password { get; set; } = "";
    private string ConfirmPassword { get; set; } = "";
    private bool AgreeTerms { get; set; } = false;

    // To display errors to the user
    private string errorMessage = "";

    private async Task HandleSignup()
    {
        errorMessage = ""; // Clear any previous errors

        // 1. Basic form validation
        if (Password != ConfirmPassword)
        {
            errorMessage = "Passwords do not match.";
            return;
        }

        if (!AgreeTerms)
        {
            errorMessage = "You must agree to the Terms and Conditions.";
            return;
        }

        // 2. Check if user already exists
        if (await _context.Users.AnyAsync(u => u.Username == Username))
        {
            errorMessage = "Username is already taken.";
            return;
        }

        if (await _context.Users.AnyAsync(u => u.Email == Email))
        {
            errorMessage = "Email is already in use.";
            return;
        }

        // 3. Create the new user object
        var newUser = new User
        {
            FullName = FullName,
            Username = Username,
            Email = Email,
            ContactNumber = ContactNumber,
            Address = Address,
            Role = "Customer", // All signups are Customers by default
            DateCreated = DateTime.Now
        };

        // 4. Hash the password
        newUser.PasswordHash = _passwordHasher.HashPassword(newUser, Password);

        // 5. Save to database
        try
        {
            _context.Users.Add(newUser);
            await _context.SaveChangesAsync();

            // 6. Redirect to login page on success
            _navigationManager.NavigateTo("/login");
        }
        catch (Exception ex)
        {
            // Log the error (in a real app) and show a generic message
            errorMessage = "An error occurred while creating your account. Please try again.";
            Console.WriteLine(ex.Message); // For debugging
        }
    }

    private void ShowTerms(MouseEventArgs e)
    {
        // TODO: Show terms and conditions modal or navigate to terms page
        Console.WriteLine("Show Terms and Conditions");
    }
}