@inherits LayoutComponentBase

<div class="dashboard-layout">
    <aside class="sidebar">
        <!-- Logo Section -->
        <div class="logo-container">
            <img src="https://scontent.fmnl4-4.fna.fbcdn.net/v/t1.15752-9/566713130_2648065195543491_8938382609362833392_n.png?_nc_cat=100&ccb=1-7&_nc_sid=9f807c&_nc_eui2=AeFUiCIjWMUSw-gKfF6tjPKUkUG4gshH3USRQbiCyEfdRFdWk4ScUaH6hjI-jxb6uPRn_InGNe7i8yIIsJnBVyFn&_nc_ohc=CKYQ4QnERwQQ7kNvwGJK-IK&_nc_oc=AdlYVTS0aHqpNYUpaTIZUQ68QdSI8r0irbvO-DCNnqQe7vH7hyRFVfKFyxvHGZ6zNXpB7gD3gpFGJtTzOcBzJHSv&_nc_zt=23&_nc_ht=scontent.fmnl4-4.fna&oh=03_Q7cD3gFLk8RRB9l3JItR-JGp_jhpG_6LzG_jAWmA6FUJ4kfMUg&oe=69281802" 
                 alt="Water Station Logo" 
                 class="logo-image" />
            <h1 class="system-name">Water Station Online Appointment</h1>
        </div>
        
        <h2 style="text-align: center;">Customer</h2>
        <nav>
            <a href="/customer/home" class="nav-link @(IsActive("/customer/home") ? "active" : "")">
                <i class="fas fa-home"></i> Home
            </a>
            <a href="/customer/place-order" class="nav-link @(IsActive("/customer/place-order") ? "active" : "")">
                <i class="fas fa-box"></i> Place Order
            </a>
            <a href="/customer/order-history" class="nav-link @(IsActive("/customer/order-history") ? "active" : "")">
                <i class="fas fa-history"></i> Order History
            </a>
            <a href="/customer/feedback" class="nav-link @(IsActive("/customer/feedback") ? "active" : "")">
                <i class="fas fa-star"></i> Feedback
            </a>
            <a href="/customer/About" class="nav-link @(IsActive("/customer/About") ? "active" : "")">
                <i class="fas fa-info-circle"></i> About Us
            </a>
        </nav>
        
        <!-- Logout button positioned at bottom -->
        <div class="logout-container">
            <button class="logout-btn">
                <i class="fas fa-sign-out-alt"></i> Log Out
            </button>
        </div>
    </aside>

    <main class="main-content">
        <div class="background-overlay"></div>
        <div class="page-container">
            @Body
        </div>
    </main>
</div>

@code {
    private bool IsActive(string href)
    {
        var uri = NavigationManager.Uri.Replace(NavigationManager.BaseUri, "/");
        return uri.StartsWith(href, StringComparison.OrdinalIgnoreCase);
    }

    [Inject] private NavigationManager NavigationManager { get; set; } = default!;
}

<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />

<style>
html, body {
    margin: 0;
    padding: 0;
    width: 100%;
    height: 100%;
    overflow: hidden;
}

.dashboard-layout {
    display: flex;
    width: 100vw;
    height: 100vh;
    font-family: 'Poppins', sans-serif;
    position: fixed;
    top: 0;
    left: 0;
    margin: 0;
    padding: 0;
    overflow: hidden;
}

.sidebar {
    width: 250px;
    background: linear-gradient(180deg, #063970 0%, #01254e 100%);
    color: white;
    padding: 2rem 1rem;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    box-shadow: 4px 0 15px rgba(0, 0, 0, 0.3);
    z-index: 10;
    height: 100vh;
    overflow-y: auto;
}

/* Logo Container Styles */
.logo-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    margin-bottom: 2rem;
    text-align: center;
}

.logo-image {
    width: 120px;
    height: 120px;
    object-fit: contain;
    border-radius: 50%;
    background: rgba(255, 255, 255, 0.1);
    padding: 8px;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
    margin-bottom: 1rem;
    transition: transform 0.3s ease;
}

.logo-image:hover {
    transform: scale(1.05);
}

.system-name {
    font-size: 1.2rem;
    font-weight: 600;
    margin: 0;
    color: #e0f1ff;
    letter-spacing: 0.5px;
    line-height: 1.4;
}

nav {
    display: flex;
    flex-direction: column;
    gap: 1rem;
}

.nav-link {
    display: flex;
    align-items: center;
    gap: 0.8rem;
    text-decoration: none;
    color: #e0f1ff;
    font-weight: 500;
    padding: 0.8rem 1rem;
    border-radius: 10px;
    transition: all 0.3s ease;
    background: rgba(255, 255, 255, 0.05);
}

.nav-link:hover {
    background: rgba(255, 255, 255, 0.15);
    color: #ffffff;
    transform: translateX(6px);
}

.nav-link.active {
    background: linear-gradient(90deg, #0056b3, #007bff);
    color: #fff;
    box-shadow: 0 4px 15px rgba(0, 123, 255, 0.4);
    transform: translateX(6px);
}

.nav-link i {
    font-size: 1.2rem;
}

/* Logout button styles */
.logout-container {
    display: flex;
    justify-content: center;
    margin-top: auto;
    padding-top: 2rem;
}

.logout-btn {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.8rem;
    background: rgba(255, 255, 255, 0.1);
    color: #e0f1ff;
    border: none;
    font-weight: 500;
    padding: 0.8rem 1.5rem;
    border-radius: 10px;
    cursor: pointer;
    transition: all 0.3s ease;
    width: 100%;
    max-width: 180px;
    font-size: 1rem;
    font-family: 'Poppins', sans-serif;
}

.logout-btn:hover {
    background: rgba(255, 255, 255, 0.2);
    color: #ffffff;
    transform: translateY(-2px);
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
}

.logout-btn i {
    font-size: 1.1rem;
}

.main-content {
    flex: 1;
    position: relative;
    overflow-y: auto;
    display: flex;
    margin: 0;
    padding: 0;
    width: calc(100vw - 250px);
    height: 100vh;
    background: white;
}

.background-overlay {
    background-image: url('https://learnandsupport.getolympus.com/sites/default/files/styles/hero_large/public/2020-10/amico_-_water_droplets_1.jpg?itok=kJ972xkJ');
    background-size: cover;
    background-position: center;
    filter: blur(3px) brightness(0.95);
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 0;
}

.page-container {
    position: relative;
    z-index: 1;
    width: 100%;
    height: 100%;
    padding: 0;
    margin: 0;
    overflow-y: auto;
    color: #fff;
}

::-webkit-scrollbar {
    width: 8px;
}
::-webkit-scrollbar-thumb {
    background: rgba(255, 255, 255, 0.4);
    border-radius: 4px;
}

* {
    box-sizing: border-box;
}
</style>