@inherits LayoutComponentBase

<div class="dashboard-layout">
    <aside class="sidebar">
        <h2 class="logo">💧 Water Station Online Appointment</h2>
        <nav>
            <a href="/home" class="nav-link @(IsActive("/home") ? "active" : "")">
                <i class="fas fa-home"></i> Home
            </a>
            <a href="/order" class="nav-link @(IsActive("/order") ? "active" : "")">
                <i class="fas fa-box"></i> Orders
            </a>
            <a href="/order-history" class="nav-link @(IsActive("/order-history") ? "active" : "")">
                <i class="fas fa-history"></i> Order History
            </a>
            <a href="/feedback" class="nav-link @(IsActive("/feedback") ? "active" : "")">
                <i class="fas fa-star"></i> Feedback
            </a>
            <a href="/About" class="nav-link @(IsActive("/About") ? "active" : "")">
                <i class="fas fa-info-circle"></i> About Us
            </a>           
        </nav>
    </aside>

    <main class="main-content">
        <div class="background-overlay"></div>
        <div class="page-container">
            @Body
        </div>
    </main>
</div>

@code {
    private bool IsActive(string href)
    {
        var uri = NavigationManager.Uri.Replace(NavigationManager.BaseUri, "/");
        return uri.StartsWith(href, StringComparison.OrdinalIgnoreCase);
    }

    [Inject] private NavigationManager NavigationManager { get; set; } = default!;
}

<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />

<style>
html, body {
    margin: 0;
    padding: 0;
    width: 100%;
    height: 100%;
    overflow: hidden;
}

.dashboard-layout {
    display: flex;
    width: 100vw;
    height: 100vh;
    font-family: 'Poppins', sans-serif;
    min-height: 100vh; /* instead of fixed */
    top: 0;
    left: 0;
    margin: 0;
    padding: 0;
    overflow: hidden;
}

.sidebar {
    width: 250px;
    background: linear-gradient(180deg, #063970 0%, #01254e 100%);
    color: white;
    padding: 2rem 1rem;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    box-shadow: 4px 0 15px rgba(0, 0, 0, 0.3);
    z-index: 10;
    height: 100vh;
    overflow-y: auto;
}

.logo {
    font-size: 1.6rem;
    font-weight: 700;
    text-align: center;
    margin-bottom: 2rem;
    letter-spacing: 1px;
}

nav {
    display: flex;
    flex-direction: column;
    gap: 1rem;
}

.nav-link {
    display: flex;
    align-items: center;
    gap: 0.8rem;
    text-decoration: none;
    color: #e0f1ff;
    font-weight: 500;
    padding: 0.8rem 1rem;
    border-radius: 10px;
    transition: all 0.3s ease;
    background: rgba(255, 255, 255, 0.05);
}

.nav-link:hover {
    background: rgba(255, 255, 255, 0.15);
    color: #ffffff;
    transform: translateX(6px);
}

.nav-link.active {
    background: linear-gradient(90deg, #0056b3, #007bff);
    color: #fff;
    box-shadow: 0 4px 15px rgba(0, 123, 255, 0.4);
    transform: translateX(6px);
}

.nav-link i {
    font-size: 1.2rem;
}

.main-content {
    flex: 1;
    position: relative;
    width: calc(100% - 250px);
    height: auto;
    overflow-y: auto;
}

.background-overlay {
    background-image: url('/images/water bg.jpg');
    background-size: cover;
    background-position: center;
    filter: blur(3px) brightness(0.95);
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 0;
}

.page-container {
    position: relative;
    z-index: 1;
    width: 100%;
    height: 100%;
    padding: 0;
    margin: 0;
    overflow-y: auto;
    color: #fff;
}

::-webkit-scrollbar {
    width: 8px;
}
::-webkit-scrollbar-thumb {
    background: rgba(255, 255, 255, 0.4);
    border-radius: 4px;
}

* {
    box-sizing: border-box;
}
</style>